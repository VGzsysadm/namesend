<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Namesend{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Compiled and minified CSS -->
        <link rel="stylesheet" href="{{ asset('assets/vendor/materialize/css/materialize.min.css') }}">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
        <link rel="icon" type="image/x-icon" href="{{ asset('img/favicon.ico') }}" />
        {% block stylesheets %}{% endblock %}
        <!-- Compiled and minified JavaScript -->
        <script src="{{ asset('assets/vendor/materialize/js/materialize.min.js') }}"></script>
        <script>
    </script>
    </head>
    <body>
    <header>
    {{ include('header.html.twig') }}
    </header>
    <main>
    {% block body %}{% endblock %}
    <!--Custom js-->
    <script src="{{ asset('assets/js/main.js') }}"></script>
    {% block javascripts %}{% endblock %}
    {% for message in app.session.flashbag().get('success') %}
        <script>
        M.toast({html: '{{message}}', classes: 'alert success'});
        </script>
    {% endfor %}
    {% for message in app.session.flashbag().get('danger') %}
        <script>
        M.toast({html: '{{message}}', classes: 'alert danger'});
        </script>
    {% endfor %}
    </main>
    <footer class="page-footer">
        <div class="container">
          <div class="footer-copyright">
            <div class="container">
            &copy; <a href="https://namesend.org" target="_blank">Namesend.org<a> {{ "now"|date("Y") }} <a href="https://github.com/VGzsysadm/namesend" target="_blank"> - pull me on GitHub</a>
            </div>
          </div>
        </div>
    </footer>
    </body>
</html>
