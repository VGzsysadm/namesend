{% extends 'base.html.twig' %}

{% block title %}Namesend - Sign up{% endblock %}

{% block body %}
    {{ form_start(registrationForm) }}
   <div class="container">
      <div class="card-panel z-depth-5">
         <div class="row margin">
            <div class="col s12 m12 l12 center">
               <img src="{{ asset('img/3326308b-c8a9-4eb4-8317-510bda55519d_200x200.png') }}"
                  alt="" class="responsive-img" style="width:200px;">
               <p class="h3 mb-3 font-weight-normal">{% trans %}Sign up{% endtrans %}</p>
               {% if form_errors(registrationForm.email) %}
               <script>
                  M.toast({html: '{{form_errors(registrationForm.email)}}', classes: 'alert alert-danger'});
               </script>
               {% endif %}
               {% if form_errors(registrationForm.plainPassword) %}
               <script>
                  M.toast({html: '{{form_errors(registrationForm.plainPassword)}}', classes: 'alert alert-danger'});
               </script>
               {% endif %}
            </div>
         </div>
         <div class="col s12 m12 l12">
            <div class="input-field">
               <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person prefix" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M10 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0zM8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm6 5c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
               </svg>
               {{ form_widget(registrationForm.email) }}
               {{ form_label(registrationForm.email, 'Email') }}
            </div>
         </div>
         <div class="col m12 l12">
            <div class="input-field">
               <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-lock prefix" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M11.5 8h-7a1 1 0 0 0-1 1v5a1 1 0 0 0 1 1h7a1 1 0 0 0 1-1V9a1 1 0 0 0-1-1zm-7-1a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h7a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-7zm0-3a3.5 3.5 0 1 1 7 0v3h-1V4a2.5 2.5 0 0 0-5 0v3h-1V4z"/>
               </svg>
               {{ form_widget(registrationForm.plainPassword, {label: 'Password'}) }}
               {{ form_label(registrationForm.plainPassword, 'Password') }}
            </div>
         </div>
         <div class="left">
            <p>
               <label>
               {{ form_widget(registrationForm.agreeTerms, {'attr': {'type': 'checkbox'}}) }}
               <span><a href="{{ path('compliance') }}">Agree terms</a></span>
               </label>
            </p>
         </div>
         <br><br>
         <div class="center">
            <button type="submit" class="btn waves-effect waves-light" style="width:100%; background-color: #ff4081;">{% trans %}Sign up{% endtrans %}</button>
               <p>or</p>
               <div class="row">
               <p class="center-align"><a href="{{ path('connect_google') }}" class="waves-effect waves-light red btn-large z-depth-3">Sign up with Google</a></p>
               <p class="center-align"><a href="{{ path('connect_azure') }}" class="waves-effect waves-light blue btn-large z-depth-3">Sign up with Azure</a></p>
               </div>
         </div>
         <div class="" style="font-size:14px;"><br>
            <a href="{{ path('app_login') }}" class="left">Have already an account? Sign in</a>
         </div>
         <br>
      </div>
   </div>
{{ form_end(registrationForm) }}
{% endblock %}