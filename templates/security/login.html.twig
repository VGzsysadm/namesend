{% extends 'base.html.twig' %}
{% block title %}Log in!{% endblock %}
{% block body %}
<form method="post">
   {% if error %}
   <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
   {% endif %}
   {% if app.user %}
   <div class="mb-3">
      You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
   </div>
   {% endif %}
   <div class="container">
      <div class="card-panel z-depth-5">
         <div class="row margin">
            <div class="col s12 m12 l12 center">
               <img src="https://raw.githubusercontent.com/VGzsysadm/sysadm.es-public-repository/master/new-1-1024x131.jpg"
                  alt="" class="responsive-img circle" style="width:1024px;">
               <p class="h3 mb-3 font-weight-normal">{% trans %}Please sign in{% endtrans %}</p>
            </div>
         </div>
         <div class="col s12 m12 l12">
            <div class="input-field">
               <i class="material-icons prefix">person</i>
               <label for="inputEmail">{% trans %}Email{% endtrans %}</label>
               <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            </div>
         </div>
         <div class="col m12 l12">
            <div class="input-field">
               <i class="material-icons prefix">lock</i>
               <label for="inputPassword">{% trans %}Password{% endtrans %}</label>
               <input type="password" name="password" id="inputPassword" class="form-control" required>
               <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>
         </div>
         <div class="left">
            <p>
               <label>
               <input id="remember_me" name="_remember_me" type="checkbox" />
               <span for="remember_me">Remember me</span>
               </label>
            </p>
         </div>
         <br><br>
         <div class="center">
            <button type="submit" 
               class="btn waves-effect waves-light " 
               style="width:100%; background-color: #ff4081;">{% trans %}Sign in{% endtrans %}</button>
         </div>
         <div class="" style="font-size:14px;"><br>
            <a href="" class="left">Register Now!</a>
            <a href="" class="right ">Forgot Password?</a>
         </div>
         <br>
      </div>
   </div>
</form>
{% endblock %}