{% extends 'base.html.twig' %}

{% block body %}
<section>
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Secret message from: </span>
          <textarea id="secret_message" class="materialize-textarea" readonly>{{ message.message|replace({"<br />": "\n"})|raw }}</textarea>
        </div>
        <div class="card-action">
          <button onclick="copyToClipboard()">Copy the message to my clipboard</button>
        </div>
      </div>
    </div>
  </div>
  <section>
{% endblock %}


